<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.table.TableFragment">

    <TextView
        android:id="@+id/back_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Kembali"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/round_arrow_back_ios_new_24"
        app:drawableTint="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/back_button_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="Tabel"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="22sp" />

        <FrameLayout
            android:id="@+id/btn_t_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:background="@drawable/item_state_background_color"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/inter_bold"
                android:text="Tabel T"
                android:textColor="@drawable/item_state_text_color"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|end"
                android:background="@drawable/round_circle"
                android:padding="5dp"
                android:src="@drawable/item_state_icon_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_z_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:background="@drawable/item_state_background_color"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/inter_bold"
                android:text="Tabel Z"
                android:textColor="@drawable/item_state_text_color"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|end"
                android:background="@drawable/round_circle"
                android:padding="5dp"
                android:src="@drawable/item_state_icon_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_f_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:background="@drawable/item_state_background_color"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/inter_bold"
                android:text="Tabel F"
                android:textColor="@drawable/item_state_text_color"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|end"
                android:background="@drawable/round_circle"
                android:padding="5dp"
                android:src="@drawable/item_state_icon_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_r_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:background="@drawable/item_state_background_color"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/inter_bold"
                android:text="Tabel R"
                android:textColor="@drawable/item_state_text_color"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|end"
                android:background="@drawable/round_circle"
                android:padding="5dp"
                android:src="@drawable/item_state_icon_color" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_random_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/item_state_background_color"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/inter_bold"
                android:text="Tabel Acak"
                android:textColor="@drawable/item_state_text_color"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center|end"
                android:background="@drawable/round_circle"
                android:padding="5dp"
                android:src="@drawable/item_state_icon_color" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>